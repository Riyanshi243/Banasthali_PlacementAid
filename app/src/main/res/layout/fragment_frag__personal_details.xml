<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".frag_PersonalDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="176dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    tools:src="@tools:sample/avatars"
                    android:layout_marginLeft="100dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="NAME"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/editName"
                android:layout_width="360dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"
                android:ems="10"
                android:minHeight="48dp"
                android:onClick="compulsory"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/gender"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="GENDER"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/editGender"
                android:layout_width="360dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"
                android:ems="10"
                android:minHeight="48dp"
                android:onClick="changeGender"
                android:text="Gender"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/dob"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Date of Birth"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/editdob"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"
                android:ems="10"
                android:inputType="textPersonName"
                android:onClick="changeDOB"
                android:text="Date of birth"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="TouchTargetSizeCheck" />


            <TextView
                android:id="@+id/fathername"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="FATHER'S NAME"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/editfathername"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"
                android:ems="10"
                android:inputType="textPersonName"
                android:onClick="compulsory"
                android:text="father's name"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="TouchTargetSizeCheck" />


            <TextView
                android:id="@+id/mothersname"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="MOTHER'S NAME"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/editmothersname"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"
                android:ems="10"
                android:inputType="textPersonName"
                android:onClick="compulsory"
                android:text="mother's name"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/phonenumber"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="PHONE NUMBER"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/editphone"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"
                android:ems="10"
                android:inputType="number"
                android:onClick="changePhone"
                android:text="phonenumber"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/address"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="ADDRESS"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/editaddesss"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"
                android:ems="10"
                android:inputType="textPersonName"
                android:onClick="changeAddress"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="TouchTargetSizeCheck" />


            <TextView
                android:id="@+id/aadhar"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="AADHAR NUMBER"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/editaadhar"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"
                android:ems="10"
                android:inputType="number"
                android:onClick="changeAadhar"
                android:text="aadhar number"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pan"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="PAN NUMBER"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/editpan"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"
                android:ems="10"
                android:inputType="textPersonName"
                android:onClick="changePan"
                android:text="pan number"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginBottom="60dp"/>
        </LinearLayout>

    </ScrollView>

</FrameLayout>